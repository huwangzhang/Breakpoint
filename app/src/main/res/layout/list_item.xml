<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.huwang.breakpoint.activity.MainActivity">

    <TextView
        android:id="@+id/tv_filename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="图片下载 "
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="20sp"/>
    <SeekBar
        android:id="@+id/download_process"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_filename"
        android:layout_margin="10dp"/>
    <Button
        android:id="@+id/bt_start"
        android:text="开始"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/download_process"/>
    <Button
        android:id="@+id/bt_stop"
        android:text="停止"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/bt_start"
        android:layout_below="@id/download_process"/>

</RelativeLayout>
